<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_about"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <LinearLayout
            android:id="@+id/linear_app_bar_about"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/background">

            <FrameLayout
                android:id="@+id/frame_back_about"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:background="?attr/actionBarItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:contentDescription="@string/action_back"
                android:tooltipText="@string/action_back"
                android:focusable="true"
                tools:targetApi="o">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_arrow_back" />

            </FrameLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/title_about"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAppearance="@style/TextAppearance.Tack.Toolbar" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_about"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Theme.Tack.ListItem.TwoLine">

                <ImageView
                    android:id="@+id/image_version"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_info_outline_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/info_version"/>

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/app_version" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_changelog"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_changelog"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_history_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/info_changelog" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/info_changelog_description" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_developer"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_developer"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_person_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/info_developer" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/app_developer" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout style="@style/Theme.Tack.ListItem.TwoLine">

                <ImageView
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginEnd="24dp"
                    android:src="@drawable/ic_round_material_components"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/info_material_components_built_with" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/info_material_components" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                style="@style/Theme.Tack.Category"
                android:text="@string/category_licenses" />

            <LinearLayout
                android:id="@+id/linear_license_metronome"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_license_metronome"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_copyright_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/license_metronome" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/license_metronome_author" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_license_material_components"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_license_material_components"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_copyright_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/license_material_components" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/license_author_google" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_license_material_icons"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_license_material_icons"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_copyright_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/license_material_icons" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/license_author_google" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_license_roboto"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_license_roboto"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_copyright_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/license_roboto" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/license_author_google" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>