<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/linear_language_container"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:minHeight="72dp"
  android:paddingTop="8dp"
  android:paddingBottom="8dp"
  android:gravity="center_vertical">

  <ImageView
    android:id="@+id/image_language_selected"
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:src="@drawable/ic_round_check_circle"
    android:visibility="invisible"
    app:tint="?attr/colorPrimary"
    tools:ignore="ContentDescription" />

  <LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="24dp"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
      android:id="@+id/text_language_name"
      style="@style/Widget.Tack.TextView.ListItem.Title" />

    <TextView
      android:id="@+id/text_language_translators"
      style="@style/Widget.Tack.TextView.ListItem.Description" />

  </LinearLayout>

</LinearLayout>