<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize">

        <LinearLayout
            android:id="@+id/linear_app_bar_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@color/background">

            <FrameLayout
                android:id="@+id/frame_back_settings"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="20dp"
                android:background="?attr/actionBarItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:contentDescription="@string/action_back"
                android:tooltipText="@string/action_back"
                android:focusable="true"
                tools:targetApi="o">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_round_arrow_back" />

            </FrameLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:singleLine="true"
                android:layout_weight="1"
                android:text="@string/title_settings"
                android:textAlignment="viewStart"
                android:fontFamily="@font/roboto_mono_bold"
                android:textAppearance="@style/TextAppearance.Tack.Toolbar" />

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:menu="@menu/menu_settings"/>

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_settings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?android:actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="vertical">

            <LinearLayout
                style="@style/Theme.Tack.ListItem.SingleLine"
                android:orientation="horizontal"
                android:paddingStart="0dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/image_sound"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_audiotrack_anim"
                    tools:ignore="ContentDescription"
                    android:layout_marginStart="16dp"/>

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox.Stretch">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/setting_sound" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/setting_sound_description" />

                </LinearLayout>

            </LinearLayout>

            <RadioGroup
                android:id="@+id/radio_group_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="72dp"
                android:layout_marginBottom="8dp">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_sound_wood"
                    style="@style/Widget.Tack.RadioButton"
                    android:text="@string/setting_sound_wood"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_sound_click"
                    style="@style/Widget.Tack.RadioButton"
                    android:text="@string/setting_sound_click"/>

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_sound_ding"
                    style="@style/Widget.Tack.RadioButton"
                    android:text="@string/setting_sound_ding" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/radio_sound_beep"
                    style="@style/Widget.Tack.RadioButton"
                    android:text="@string/setting_sound_beep"/>

            </RadioGroup>

            <LinearLayout
                android:id="@+id/linear_vibrate_always"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_vibrate_always"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_vibrate_to_volume_anim"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox.Stretch">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/setting_vibrate_always" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/setting_vibrate_always_description" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_vibrate_always"
                    style="@style/Widget.Tack.Switch"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_dark_mode"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_dark_mode"
                    style="@style/Theme.Tack.ListItem.Icon"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox.Stretch">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/setting_dark_mode" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/setting_dark_mode_description" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_dark_mode"
                    style="@style/Widget.Tack.Switch"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_keep_awake"
                style="@style/Theme.Tack.ListItem.TwoLine.Clickable">

                <ImageView
                    android:id="@+id/image_keep_awake"
                    style="@style/Theme.Tack.ListItem.Icon"
                    android:src="@drawable/ic_round_visibility"
                    tools:ignore="ContentDescription" />

                <LinearLayout style="@style/Theme.Tack.ListItem.TextBox.Stretch">

                    <TextView
                        style="@style/Theme.Tack.ListItem.Title"
                        android:text="@string/setting_keep_awake" />

                    <TextView
                        style="@style/Theme.Tack.ListItem.Description"
                        android:text="@string/setting_keep_awake_description" />

                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_keep_awake"
                    style="@style/Widget.Tack.Switch"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>