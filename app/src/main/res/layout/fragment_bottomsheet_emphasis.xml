<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:orientation="vertical">

  <FrameLayout
    android:layout_width="match_parent"
    android:layout_height="?android:actionBarSize">

    <TextView
      style="@style/Widget.Tack.TextView.Toolbar.BottomSheet.Center"
      android:text="@string/action_emphasis" />

  </FrameLayout>

  <View
    style="@style/Widget.Tack.Divider"
    android:layout_marginTop="0dp"
    android:layout_marginBottom="0dp" />

  <androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

    <LinearLayout
      android:id="@+id/linear_emphasis_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

      <com.google.android.material.slider.Slider
        android:id="@+id/slider_emphasis"
        style="@style/Widget.Tack.Slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:valueFrom="0"
        android:valueTo="15"
        android:stepSize="1"
        app:trackColorInactive="@color/on_background_tertiary_surface"/>

    </LinearLayout>

  </androidx.core.widget.NestedScrollView>

</LinearLayout>