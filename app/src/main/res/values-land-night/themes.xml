<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- THEMES -->

    <style name="Theme.Tack" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorOnSecondary">@color/on_secondary</item>

        <item name="android:colorBackground">@color/background</item>
        <item name="colorOnBackground">@color/on_background</item>
        <item name="android:colorForeground">@color/on_background</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="snackbarButtonStyle">@style/Theme.Tack.Button.TextButton.Snackbar</item>

        <item name="android:colorControlNormal">@color/on_background</item>
        <item name="android:colorControlActivated">@color/secondary</item>
        <item name="android:colorControlHighlight">@color/highlight</item>
        <item name="android:colorEdgeEffect">@color/highlight</item>

        <item name="android:navigationBarColor">@color/black</item>

        <item name="android:fontFamily">@font/roboto_mono_regular</item>
    </style>

    <!-- Bottom Sheet -->
    <style name="Theme.Tack.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorControlHighlight">@color/highlight</item>
        <item name="bottomSheetStyle">@style/Shape.Tack.BottomSheet</item>
    </style>

</resources>