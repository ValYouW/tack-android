<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Tack" parent="Base.Tack">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/background</item>
        <item name="android:navigationBarDividerColor">@color/stroke_secondary</item>
        <item name="android:windowSplashscreenContent">@drawable/splash_content</item>
    </style>

    <style name="Theme.Tack.NavBarDivider" parent="Theme.Tack">
        <item name="android:navigationBarDividerColor">@color/stroke_secondary</item>
    </style>

    <style name="Theme.Tack.BottomSheetDialog" parent="Base.Tack.BottomSheetDialog">
        <item name="android:navigationBarColor">@color/surface</item>
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarDividerColor">@color/stroke_secondary</item>
    </style>

</resources>