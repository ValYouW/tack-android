<resources xmlns:tools="http://schemas.android.com/tools">

  <style name="Widget.Tack.TextView" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">15.5sp</item>
    <item name="android:textColor">@color/on_background</item>
    <item name="android:fontFamily">@font/jost_book</item>
    <item name="android:lineSpacingExtra">-1.5sp</item>
    <item name="android:breakStrategy" tools:targetApi="m">high_quality</item>
    <item name="android:hyphenationFrequency" tools:targetApi="m">full</item>
  </style>

  <style name="Widget.Tack.TextView.Paragraph" parent="Widget.Tack.TextView">
    <item name="android:justificationMode" tools:targetApi="o">inter_word</item>
  </style>

  <style name="Widget.Tack.TextView.Title" parent="Widget.Tack.TextView">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginBottom">12dp</item>
    <item name="android:textSize" tools:ignore="SpUsage">21.5dp</item>
    <item name="android:fontFamily">@font/jost_bold</item>
  </style>

  <style name="Widget.Tack.TextView.ListItem.Title" parent="Widget.Tack.TextView">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">center_vertical</item>
    <item name="android:textSize">16.5sp</item>
  </style>

  <style
    name="Widget.Tack.TextView.ListItem.Description"
    parent="Widget.Tack.TextView.ListItem.Title">
    <item name="android:textSize">15sp</item>
    <item name="android:textColor">@color/on_background_secondary</item>
  </style>

  <style name="Widget.Tack.Switch" parent="Widget.Wear.RoundSwitch">
    <item name="android:layout_width">@dimen/circular_touch_target_size</item>
    <item name="android:layout_height">@dimen/circular_touch_target_size</item>
    <item name="android:clipChildren">false</item>
    <item name="android:clipToPadding">false</item>
    <item name="trackTint">@color/transparent</item>
    <item name="thumbTint">@color/switch_thumb_tint_selector</item>
    <item name="android:background">@drawable/shape_circular_bg</item>
  </style>

  <style name="Widget.Tack.Image.Icon" parent="">
    <item name="android:layout_width">24dp</item>
    <item name="android:layout_height">24dp</item>
    <item name="android:layout_gravity">center</item>
  </style>

  <style name="Widget.Tack.LinearLayout.ListItem" parent="">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingTop">8dp</item>
    <item name="android:paddingBottom">8dp</item>
    <item name="android:paddingStart">16dp</item>
    <item name="android:paddingEnd">8dp</item>
    <item name="android:clipChildren">false</item>
    <item name="android:clipToPadding">false</item>
    <item name="android:focusable">true</item>
    <item name="android:clickable">true</item>
    <item name="android:background">@drawable/ripple_list_item</item>
    <item name="android:baselineAligned">false</item>
  </style>

  <style name="Widget.Tack.LinearLayout.ListItem.TextBox" parent="">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:orientation">vertical</item>
    <item name="android:layout_marginStart">8dp</item>
    <item name="android:layout_gravity">center_vertical</item>
  </style>

</resources>