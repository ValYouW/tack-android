<?xml version="1.0" encoding="utf-8"?>
<xyz.zedler.patrick.tack.view.CustomScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_margin_top"
        android:paddingBottom="@dimen/list_margin_bottom">

        <TextView
            style="@style/Widget.Tack.Title"
            android:text="@string/title_settings"/>

        <LinearLayout
            android:id="@+id/linear_settings_sound"
            style="@style/Widget.Tack.ListItem">

            <FrameLayout
                android:layout_width="@dimen/circular_touch_target_size"
                android:layout_height="@dimen/circular_touch_target_size"
                android:background="@drawable/shape_circular_bg">

                <ImageView
                    android:id="@+id/image_sound"
                    style="@style/Widget.Tack.Icon"
                    android:src="@drawable/ic_round_audiotrack_anim"
                    android:importantForAccessibility="no"/>

            </FrameLayout>

            <LinearLayout style="@style/Widget.Tack.ListItemTextBox">

                <TextView
                    style="@style/Widget.Tack.ListItemLabel"
                    android:text="@string/setting_sound"/>

                <TextView
                    android:id="@+id/text_setting_sound"
                    style="@style/Widget.Tack.ListItemDescription" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_settings_vibrate_always"
            style="@style/Widget.Tack.ListItem">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_settings_vibrate_always"
                style="@style/Widget.Tack.Switch"/>

            <LinearLayout style="@style/Widget.Tack.ListItemTextBox">

                <TextView
                    style="@style/Widget.Tack.ListItemLabel"
                    android:text="@string/setting_vibrate_always"/>

                <TextView
                    style="@style/Widget.Tack.ListItemDescription"
                    android:text="@string/setting_vibrate_always_description"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_settings_wrist_gestures"
            style="@style/Widget.Tack.ListItem">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_settings_wrist_gestures"
                style="@style/Widget.Tack.Switch"/>

            <LinearLayout style="@style/Widget.Tack.ListItemTextBox">

                <TextView
                    style="@style/Widget.Tack.ListItemLabel"
                    android:text="@string/setting_wrist_gestures"/>

                <TextView
                    style="@style/Widget.Tack.ListItemDescription"
                    android:text="@string/setting_wrist_gestures_description"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_settings_hide_picker"
            style="@style/Widget.Tack.ListItem">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_settings_hide_picker"
                style="@style/Widget.Tack.Switch"/>

            <LinearLayout style="@style/Widget.Tack.ListItemTextBox">

                <TextView
                    style="@style/Widget.Tack.ListItemLabel"
                    android:text="@string/setting_hide_picker"/>

                <TextView
                    style="@style/Widget.Tack.ListItemDescription"
                    android:text="@string/setting_hide_picker_description"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_settings_animations"
            style="@style/Widget.Tack.ListItem">

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_settings_animations"
                style="@style/Widget.Tack.Switch"
                android:layout_gravity="start"/>

            <LinearLayout style="@style/Widget.Tack.ListItemTextBox">

                <TextView
                    style="@style/Widget.Tack.ListItemLabel"
                    android:text="@string/setting_animations"/>

                <TextView
                    style="@style/Widget.Tack.ListItemDescription"
                    android:text="@string/setting_animations_description"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_settings_changelog"
            style="@style/Widget.Tack.ListItem">

            <FrameLayout
                android:layout_width="@dimen/circular_touch_target_size"
                android:layout_height="@dimen/circular_touch_target_size"
                android:background="@drawable/shape_circular_bg">

                <ImageView
                    android:id="@+id/image_changelog"
                    style="@style/Widget.Tack.Icon"
                    android:src="@drawable/ic_round_history_anim"
                    android:importantForAccessibility="no" />

            </FrameLayout>

            <LinearLayout style="@style/Widget.Tack.ListItemTextBox">

                <TextView
                    style="@style/Widget.Tack.ListItemLabel"
                    android:text="@string/title_changelog"/>

                <TextView
                    style="@style/Widget.Tack.ListItemDescription"
                    android:text="@string/versionName"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_settings_rate"
            style="@style/Widget.Tack.ListItem">

            <FrameLayout
                android:layout_width="@dimen/circular_touch_target_size"
                android:layout_height="@dimen/circular_touch_target_size"
                android:background="@drawable/shape_circular_bg">

                <ImageView
                    android:id="@+id/image_rate"
                    style="@style/Widget.Tack.Icon"
                    android:src="@drawable/ic_round_star_anim"
                    android:importantForAccessibility="no" />

            </FrameLayout>

            <TextView
                style="@style/Widget.Tack.ListItemLabel"
                android:layout_marginStart="8dp"
                android:text="@string/setting_rate"/>

        </LinearLayout>

    </LinearLayout>

</xyz.zedler.patrick.tack.view.CustomScrollView>