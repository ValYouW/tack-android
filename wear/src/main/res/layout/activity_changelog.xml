<?xml version="1.0" encoding="utf-8"?>
<xyz.zedler.patrick.tack.view.RotaryScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/list_margin_top"
        android:paddingBottom="@dimen/list_margin_bottom">

        <TextView
            style="@style/Widget.Tack.Title"
            android:text="@string/title_changelog"/>

        <TextView
            android:id="@+id/text_changelog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:textSize="13sp"
            android:breakStrategy="high_quality"
            android:hyphenationFrequency="full"
            android:textColor="@color/on_background"/>

    </LinearLayout>

</xyz.zedler.patrick.tack.view.RotaryScrollView>