<?xml version="1.0" encoding="utf-8"?>
<xyz.zedler.patrick.tack.view.RotaryScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/list_margin_top"
    android:paddingBottom="@dimen/list_margin_bottom">

    <TextView
      style="@style/Widget.Tack.TextView.Title"
      android:text="@string/title_changelog" />

    <TextView
      android:id="@+id/text_changelog"
      style="@style/Widget.Tack.TextView.Paragraph"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingStart="20dp"
      android:paddingEnd="20dp"
      android:paddingBottom="20dp"
      android:textSize="15sp" />

  </LinearLayout>

</xyz.zedler.patrick.tack.view.RotaryScrollView>